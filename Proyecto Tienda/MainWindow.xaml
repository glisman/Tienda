<Window x:Class="Proyecto_Tienda.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_Tienda"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Background="Transparent" AllowsTransparency="True" WindowStyle="None">
    <Border  BorderBrush="Red" BorderThickness="2" Background="Aqua">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <Menu>
                    <MenuItem Header="REGISTRAR " Margin="10" Click="MenuItem_Click"></MenuItem>
                    <MenuItem Header="MOSTRAR PRODUCTOS" Margin="10"></MenuItem>
                    <MenuItem Header="ENSAMBLADO" Margin="10"></MenuItem>
                    <MenuItem Header="SALIR " Margin="10"></MenuItem>
                </Menu>
            </StackPanel>
            <Frame  x:Name="Navegacion" NavigationUIVisibility="Visible" Grid.Row="1">
                
            </Frame>
        </Grid>
           
    </Border>
   
</Window>
